<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dsdm.yuuuuunmi.calculator.MainActivity">


    <Button
        android:id="@+id/btn_cal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Go To Calculator 1" />

    <Button
        android:id="@+id/btn_cal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Calculator 2" />

    <Button
        android:id="@+id/btn_calX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Calculator X" />

    <TextView
        android:id="@+id/txt_mainResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Result"
        android:textSize="20dp" />

</LinearLayout>
